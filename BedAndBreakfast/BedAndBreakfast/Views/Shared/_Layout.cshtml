
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BedAndBreakfast</title>
</head>
<body>

    @{
        if (User.Identity.IsAuthenticated)
        {
            <div>
                <p>
                    Hello @User.Identity.Name!
                </p>
            </div>
            <hr />
        }
    }

            <div>
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-area="" asp-controller="Home" asp-action="SignIn">Sign In</a>
                    <a asp-area="" asp-controller="Home" asp-action="SignUp">Sign Up</a>
                }
                else
                {
                    <a asp-area="" asp-controller="Home" asp-action="SignOut">Sign Out</a>
                }



            </div>
    <hr />

    @RenderBody()

</body>
</html>
