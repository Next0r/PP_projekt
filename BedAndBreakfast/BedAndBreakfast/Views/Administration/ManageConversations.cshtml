
@{
    ViewData["Title"] = "ManageConversations";
}
<script type="text/javascript" src="~/js/messageSystem.js"></script>
<script type="text/javascript" src="~/js/manageConversations.js"></script>
<script type="text/javascript">
    window.onload = function(){
        handleSearchClicked();
    }
</script>
<style>
    .user-select-box{
        border: 1px solid black;
        margin: 3px; 
        padding: 3px;
    }
    .user-select-box:hover{
        background-color: lightgray;
        cursor: pointer;
    }
</style>


<h2>ManageConversations</h2>

<div id="global-message-container"></div>
<table>
    <tr>
        <td style="width: 300px;">
            <div style="margin-top: 42px;">Receivers</div>
            <div id="receivers-list-container" style="height: 300px; border: 1px solid black; overflow-x: hidden; overflow-y: auto;"></div>
        </td>
        <td style="width: 300px;">           
            <input id="search-query-input-field" type="text" />
            <br />
            <button onclick="handleSearchClicked();">Search</button>
            <div>Receivers browser</div>
            <div id="users-list-container" style="height: 300px; border: 1px solid black; overflow-x: hidden; overflow-y: auto;"></div>
        </td>
    </tr>
    <tr>
        <td id="message-creator-container" colspan="2">
            <label>Conversation title</label>
            <br />
            <input id="title-input-field" type="text" size="50" />
            <br />
            <label>Message contnet</label>
            <br />
            <textarea id="message-textarea" style="resize: none;" rows="6" cols="100" data-valid="false"></textarea>
            <br />
            <label>Message read only</label>
            <input id="readonly-checkbox" type="checkbox" checked>
            <br />
            <button onclick="handleSendClicked();">Send</button>
        </td>
    </tr>
</table>
