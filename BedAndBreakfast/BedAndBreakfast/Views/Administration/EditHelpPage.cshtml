@model BedAndBreakfast.Models.EditHelpPageViewModel
@using BedAndBreakfast.Data;

@{
    ViewData["Title"] = "EditHelpPage";
    HelpPage helpPage = (HelpPage)ViewData["helpPage"];
    string helpTags = (string)ViewData["pageTags"];
}

<div style="text-align:center;">
    <div class="view-box-01 text-segue-16">
        <p class="indent-01 text-segue-18">Help page editor</p>
        <hr />

        <p class="error-span-label-box-01">@ViewBag.Message</p>

        <form asp-action="EditHelpPage" method="post">
            <input type="hidden" name="hPage" value="@helpPage.ID" />
            <input asp-for="WasEdited" value="true" type="hidden" />

            <div class="block-01">
                <label class="label-box-10">Tags: </label>
                <input class="input-box-01 text-segue-16" asp-for="Tags" value="@helpTags" />
            </div>
            <div class="block-01">
                <label class="label-box-10">Title: </label>
                <input class="input-box-01 text-segue-16" asp-for="Title" value="@helpPage.Title" />
            </div>

            <div>
                <label class="label-box-10">Content: </label>
                @Html.TextArea("Content", helpPage.Content, new { rows = 25, cols = 50, @class = "textarea-style-02 text-segue-16", @spellcheck = "false" })
            </div>
            <div class="block-01">
                <label asp-for="IsLocked"></label>
                <input asp-for="IsLocked" value="true" checked="@helpPage.IsLocked" />
            </div>
            <input class="button-01 text-segue-14" type="submit" value="Save" />
        </form>
    </div>
</div>
