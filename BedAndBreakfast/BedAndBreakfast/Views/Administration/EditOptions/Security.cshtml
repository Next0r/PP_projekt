@model BedAndBreakfast.Models.EditUserViewModel

@{
    ViewData["Title"] = "Security";
}

<h2>Security</h2>

<form asp-action="EditSecurity">
    <input asp-for="UserName" value="@ViewData["currentUser"]" type="hidden" />
    <div>
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div>
        <label asp-for="RepeatNewPassword"></label>
        <input asp-for="RepeatNewPassword" />
        <span asp-validation-for="RepeatNewPassword"></span>
    </div>
    <div>
        <input type="submit" value="Change" />
    </div>
</form>
