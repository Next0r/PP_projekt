
@{
    ViewData["Title"] = "Edit";

    // This variable represents edit option.
    // It will be null if no option selected.
    string option = (string)ViewData["option"];
}


<div id="edit_div">
    <div id="edit_head_text">Edit your settings</div>
    <div id="edit_prop_div">
        <div class="edit_options">
            <a asp-action="Edit" asp-route-option="Notifications">Notifications</a>
        </div>
        <div class="edit_options">
            <a asp-action="Edit" asp-route-option="Privacy">Privacy</a>
        </div>
        <div class="edit_options">
            <a asp-action="Edit" asp-route-option="Security">Security</a>
        </div>
    </div>
    <div style="clear:both;"></div>



    @if (option != null)
    {
        <partial name="EditOptions/@option" view-data="ViewData" />
    }
    else
    {
        <partial name="EditOptions/Notifications" view-data="ViewData" />
    }
    <h4>@ViewBag.Message</h4>

</div>


